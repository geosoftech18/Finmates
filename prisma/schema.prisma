// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(cuid())
  title       String
  description String
  skills      String[] // Array of skills
  experience  String   // Experience level (e.g., "0-2 years", "3-5 years")
  expiryDate  DateTime
  location    String
  type        String   // "full-time", "part-time", "contract", "internship"
  status      String   @default("open") // "open", "closed", "paused"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  applications JobApplication[]

  @@map("jobs")
}

model JobApplication {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String
  position        String   // Job position applied for
  coverLetter     String?  // Optional cover letter
  resumeUrl       String   // OneDrive URL to the resume
  currentPosition String?  // Current job position
  experienceYears Int      @default(0)
  expectedSalary  String?
  portfolioLink   String?
  degree          String?
  university      String?
  yearOfPassing   String?
  percentage      String?
  experienceType  String   @default("fresher") // "fresher" or "experienced"
  companyName     String?
  jobTitle        String?
  workDuration    String?
  status          String   @default("applied") // "applied", "shortlisted", "rejected", "hired"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  jobId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("job_applications")
}
